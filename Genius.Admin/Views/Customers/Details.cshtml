                                            <label asp-for="externalId" class="control-label"></label>
                                            <input asp-for="externalId" class="form-control" />
                                            <span asp-validation-for="externalId" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="kycStatus" class="control-label"></label>
                                            <input asp-for="kycStatus" class="form-control" />
                                            <span asp-validation-for="kycStatus" class="text-danger"></span>
                                        </div>
                                        </br>
@*                                         <div class="form-group">
                                            <input type="submit" value="Save" class="btn btn-primary" />
                                        </div> *@
                                    </form>
                                    @if (Model.depositInformations.Count() > 0)
                                    {
                                        <button type="button" class="btn btn-primary waves-effect waves-light" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                                            Show Pix QrCode
                                        </button>

                                        <!-- Static Backdrop Modal -->
                                        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
